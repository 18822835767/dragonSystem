<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<!--龙妈显示账目时对应的fxml-->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MomAccountController" prefHeight="400.0"
            prefWidth="600.0">
    <top>
        <HBox>
            <Button text="显示所有" onAction="#showAllAccount"/>
            <Button text="只看购买" onAction="#showPurchaseAccount"/>
            <Button text="只看退款" onAction="#showRefundAccount"/>
        </HBox>
    </top>

    <center>
        <ListView fx:id="listView"/>
    </center>

</BorderPane>
